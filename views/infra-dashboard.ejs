<%- include('partials/header', { active: 'infra-rooms' }) %>

<div class="p-[32px]">
  <!-- Statistics Cards -->
  <div class="grid grid-cols-4 gap-[16px] mb-[24px]">
    <div class="bg-white rounded-[12px] border border-[#e2e8f0] p-[20px]">
      <div class="text-[0.75rem] text-[#94a3b8] uppercase tracking-[0.05em] mb-[4px]">Total Rooms</div>
      <div class="text-[1.75rem] font-[700] text-[#1e293b]" id="totalRooms">0</div>
    </div>
    <div class="bg-white rounded-[12px] border border-[#e2e8f0] p-[20px]">
      <div class="text-[0.75rem] text-[#94a3b8] uppercase tracking-[0.05em] mb-[4px]">Occupied</div>
      <div class="text-[1.75rem] font-[700] text-[#ef4444]" id="occupiedRooms">0</div>
    </div>
    <div class="bg-white rounded-[12px] border border-[#e2e8f0] p-[20px]">
      <div class="text-[0.75rem] text-[#94a3b8] uppercase tracking-[0.05em] mb-[4px]">Available</div>
      <div class="text-[1.75rem] font-[700] text-[#10b981]" id="availableRooms">0</div>
    </div>
    <div class="bg-white rounded-[12px] border border-[#e2e8f0] p-[20px]">
      <div class="text-[0.75rem] text-[#94a3b8] uppercase tracking-[0.05em] mb-[4px]">Occupancy Rate</div>
      <div class="text-[1.75rem] font-[700] text-[#3b82f6]" id="occupancyRate">0%</div>
    </div>
  </div>

  <!-- Filters -->
  <div class="filters-container">
    <div class="filter-grid" style="grid-template-columns: repeat(4, 1fr);">
      <div class="filter-item">
        <label>DATE</label>
        <input type="date" id="dateFilter" class="filter-input">
      </div>
      <div class="filter-item">
        <label>BUILDING</label>
        <select id="buildingFilter" class="filter-select">
          <option value="all">All Buildings</option>
        </select>
      </div>
      <div class="filter-item">
        <label>FLOOR</label>
        <select id="floorFilter" class="filter-select">
          <option value="all">All Floors</option>
        </select>
      </div>
      <div class="filter-item">
        <label>CATEGORY</label>
        <select id="categoryFilter" class="filter-select">
          <option value="all">All Categories</option>
        </select>
      </div>
    </div>
  </div>

  <!-- Room Cards -->
  <div id="roomsContainer" class="timetable-cards">
    <!-- Room cards will be loaded here -->
  </div>

  <div id="loadingState" class="loading-state" style="display: none;">
    <div class="spinner"></div>
    <p>Loading room data...</p>
  </div>

  <div id="emptyState" class="empty-state" style="display: none;">
    <div class="empty-icon">üè¢</div>
    <h3>No rooms found</h3>
    <p>Try adjusting your filters</p>
  </div>
</div>

<script src="/js/infra-dashboard.js"></script>
</body>
</html>
